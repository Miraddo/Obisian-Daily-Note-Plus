{
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES6",
        "allowJs": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES7",
            "ES2020"
        ],
        "types": ["node", "obsidian"],
        "typeRoots": ["./node_modules/@types"],
        "paths": {
            "obsidian": ["./node_modules/obsidian/dist/obsidian.d.ts"]
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": false
    },
    "include": [
        "src/**/*.ts"
    ]
} 